<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PersonalizarControl"
             xmlns:controls="clr-namespace:PersonalizarControl.Controls"
             x:Class="PersonalizarControl.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
       
        <controls:CustomBoxView Espessura="{Binding Path=Value}" WidthRequest="200" HeightRequest="200" BindingContext="{x:Reference SliderEspessura}"/>
        <Slider x:Name="SliderEspessura" Minimum="0" Maximum="100"/>
    </StackLayout>

</ContentPage>
